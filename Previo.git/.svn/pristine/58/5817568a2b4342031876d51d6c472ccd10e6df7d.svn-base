<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal" 
    android:descendantFocusability="blocksDescendants" >
 
   
    <LinearLayout 
        
            android:orientation="vertical" 
		
		
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout 
        android:orientation="horizontal" 	
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

 <ImageButton
     android:id="@+id/btn_itemGo"
     style="@style/TitlePlayStore"
     android:layout_width="40dp"
     android:layout_height="match_parent"
     android:layout_gravity="center"
     android:layout_marginTop="10dp"
     android:src="@android:drawable/ic_menu_more"
     android:onClick="displayDetailOnClickHandler" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="true"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txv_itemTitle"
            style="@style/TextViewListado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="16dp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/txv_itemDescr"
            style="@style/TextViewListado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="14dp" />
        
        <TextView
            android:id="@+id/txv_itemInfo"
            style="@style/TextViewListado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txv_orden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="10dp"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
    
    <TextView
            android:id="@+id/txv_itemEstatus"
            style="@style/TextViewListado"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_alignParentLeft="true"
            android:textColor="#3262A2"
            />
    
    <TextView
            android:id="@+id/txv_itemFaltanFotos"
            style="@style/TextViewListado"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
             android:gravity="right"
            android:paddingRight="10dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/red"
            />
    
    </LinearLayout>
    
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyt_ocultar"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@color/fondo_header"
        android:layout_height="match_parent" >
    
          <TextView
            android:id="@+id/child_total"
            android:layout_width="140dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/negro"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="TextView"/>

        <TextView
            android:id="@+id/childrevisadas"
            android:layout_width="70dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/negro"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/child_enrevision"
           android:layout_width="70dp"
           android:textColor="@color/negro"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/child_sinrevisar"
            android:layout_width="70dp"
            android:textColor="@color/negro"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="TextView" />
        
        
    </LinearLayout>

    </LinearLayout>
</LinearLayout>