<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_body"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <TextView
            android:id="@+id/txv_tituloFactura"
            style="@style/TitlePlayStore"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="0.95"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_lyt_contenedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fondo_body"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txv_ReferenciaEtiqueta"
                style="@style/TextViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_listadofact_txv_referenciaEtiqueta" />

            <TextView
                android:id="@+id/txv_referenciaValor"
                style="@style/TextViewInfoResalta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txv_fechaArriboEtiqueta"
                style="@style/TextViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_listadofact_txv_fechaFactEtiqueta" />

            <TextView
                android:id="@+id/txv_fechaArriboValor"
                style="@style/TextViewInfoResalta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txv_noFacturaEtiqueta"
                style="@style/TextViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_items_txv_facturaEtiqueta" />

            <TextView
                android:id="@+id/txv_noFacturaValor"
                style="@style/TextViewInfoResalta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txv_ordenCompraEtiqueta"
                style="@style/TextViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_items_txv_ordenCompraEtiqueta" />

            <TextView
                android:id="@+id/txv_ordenCompraValor"
                style="@style/TextViewInfoResalta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txv_razonSocialEtiqueta"
                style="@style/TextViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_revisionitem_txv_razonSocialEtiqueta" />

            <TextView
                android:id="@+id/txv_razonSocialValor"
                style="@style/TextViewInfoResalta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txv_RFCEtiqueta"
                style="@style/TextViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_items_txv_rfcEtiqueta" />

            <TextView
                android:id="@+id/txv_RFCValor"
                style="@style/TextViewInfoResalta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_lyt_listados_items"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@drawable/separador"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp" />

</LinearLayout>